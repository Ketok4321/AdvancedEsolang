import ../tester

class TypeUtilsTester extends Tester:
    method tests():
        this.create()
        this.typeName()
    end

    method create():
        variable creation = TypeUtils.create("True")

        this.result("TypeUtils.create should create an object of the specified type", creation is True)
    end

    method typeName():
        variable a = True
    
        this.result("TypeUtils.typeName should return the name of the object's type", (TypeUtils.typeName(a)).equals("True"))
    end
end