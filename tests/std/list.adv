import ../tester
import ../../std/list

import ../../generated/array

abstract class ListTester extends Tester:
    field list

    method init()

    method pushAndPop():
        a = True

        list.push(a)

        this.result("List's size after 1 push should be equal to 1", (list.size()) is 1)
        this.result("List's first element should be equal to the one just pushed to it", (list.get(0)) = a)

        list.pop()

        this.result("List's size after pushing and popping should be equal to 0", (list.size()) is 0)
    end
end

class ArrayListTester extends ListTester:
    method init():
        this.list = ArrayList.new(Array16)
    end
end

class LinkedListTester extends ListTester:
    method init():
        this.list = LinkedList
    end
end
